<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register User"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#FF0000"
        android:textSize="35sp"
        android:layout_marginTop="25dp"/>
    <EditText
        android:id="@+id/em"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:inputType="text"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        />
    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/em"
        android:textStyle="bold"
        android:inputType="text"/>
    <EditText
        android:id="@+id/usid"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter UserID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass"
        android:textStyle="bold"
        android:inputType="text"/>
    <EditText
        android:id="@+id/na"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usid"
        android:textStyle="bold"
        android:inputType="text"/>
    <EditText
        android:id="@+id/mo"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter Mobile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/na"
        android:textStyle="bold"
        android:inputType="text"/>
    <EditText
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter Age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mo"
        android:textStyle="bold"
        android:inputType="number"/>
    <EditText
        android:id="@+id/gen"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/age"
        android:inputType="text"/>
    <EditText
        android:id="@+id/he"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter Height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gen"
        android:textStyle="bold"
        android:inputType="number"/>
    <EditText
        android:id="@+id/we"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter Weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/he"
        android:textStyle="bold"
        android:inputType="number"/>

    <EditText
        android:id="@+id/did"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter DietitaionID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/we"
        android:inputType="number"/>
    <EditText
        android:id="@+id/duid"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter Dietitian UserID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/did"
        android:textStyle="bold"
        android:inputType="text"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textStyle="bold"
        android:textColor="#00FF00"
        android:backgroundTint="#FFF"
        android:id="@+id/btn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duid"/>
</androidx.constraintlayout.widget.ConstraintLayout>